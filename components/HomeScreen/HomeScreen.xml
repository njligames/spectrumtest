<component name="HomeScreen" extends="Group"  initialFocus="rowList">
    <script type="text/brightscript" uri="HomeScreen.brs" />
	 <interface>
        <field id="jumpToRowItem" type="intarray" alias="rowList.jumpToRowItem" />

        <field id="content" type="node" alias="rowList.content" />
        <field id="rowItemSelected" type="intarray" alwaysNotify="true" alias="rowList.rowItemSelected" />
    </interface>
    <children>

        <RowList
            itemComponentName="RowListItemComponent"
            rowTitleComponentName = "DefaultRowTitleComponent"

            id="rowList"
            translation="[ 30, 39 ]"

            itemSize="[ 1110, 720 ]"

            numRows="1"
            rowHeights     = "[ 600 ]"
            rowSpacings    = "[ 63 ]"
            rowItemSize    = "[ [1110, 600] ]"
            rowItemSpacing = "[ [200,0] ]"
            rowLabelOffset = "[ [0, 0] ]"
            showRowLabel   = "[ true ]"

            focusBitmapUri = "pkg:/images/focus.9.png"
        />
    </children>
</component>
